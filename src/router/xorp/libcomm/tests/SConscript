import os
Import("env")

env = env.Clone()

env.PrependUnique(CPPPATH = [ '#', '$BUILDDIR', '$BUILDDIR/libcomm', ])
env.PrependUnique(LIBPATH = [ '$BUILDDIR/libxorp', '$BUILDDIR/libcomm', ])
env.PrependUnique(LIBS = [ 'xorp_core', 'xorp_comm' ])

# XXX Not for cross-compilation.
test_comm = env.AutoTest(target = 'test_comm', source = 'test_comm.c')
